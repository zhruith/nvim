{
  "inlayHint.display": false,
  "list.floatPreview": true,

  "rust-analyzer.server.path": "rust-analyzer",
  "rust-analyzer.server.extraEnv": { "CARGO_TARGET_DIR": "target/analyzer" },
  "rust-analyzer.check.extraArgs": [ "--target-dir=target/analyzer" ],

  "pylsp.plugins.ruff.ignore": [ "F401", "F811" ],
  "pylsp.plugins.ruff.lineLength": 120,

  "clangd.fallbackFlags": [
    "-I${workspaceFolder}",
    "-I${userHome}/scoop/apps/vcpkg/current/installed/x64-windows/include/",
    "-I${userHome}/scoop/apps/vcpkg/current/installed/x64-windows/include/qt5/QtWidgets/",
  ],

  "Lua.diagnostics.globals": [ "vim" ],
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "languageserver": {
    "nu": {
      "command": "nu",
      "args": ["--lsp"],
      "trace.server": "verbose",
      "filetypes": ["nu"]
    }
  }
}
