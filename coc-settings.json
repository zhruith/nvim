{
  "http.proxy": "http://192.168.0.115:10809",
  "rust-analyzer.server.path": "rust-analyzer",
  "rust-analyzer.server.extraEnv": { "CARGO_TARGET_DIR": "target/analyzer" },
  "rust-analyzer.check.extraArgs": [ "--target-dir=target/analyzer" ],

  "pylsp.plugins.ruff.ignore": [ "F401", "F811" ],
  "pylsp.plugins.pycodestyle.enabled": false,

  "clangd.fallbackFlags": [
    "-I${workspaceFolder}",
    "-I${userHome}/scoop/apps/vcpkg/current/installed/x64-windows/include",
  ],

  "Lua.diagnostics.globals": [ "vim" ],
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "volar.autoClosingTags": true,
}
